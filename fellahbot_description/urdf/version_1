<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="fellahbot">

  <xacro:include filename="$(find fellahbot_description)/urdf/constants.xacro"/>
  <xacro:include filename="$(find fellahbot_description)/urdf/inertials.xacro"/>
  <xacro:include filename="$(find fellahbot_description)/urdf/materials.xacro"/>


  <link name="base_link"/>

  <joint name="base_robot" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin rpy="0 0 0" xyz="0 0 ${(chassis_to_ground)}"/>
  </joint>


  <link name="chassis">
    <visual>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="silver"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 .3 0.1"/>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="50"/>
  </link>


  <link name="wheel_1">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="${math_pi_over_2} 0.0 0.0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="6"/>
  </link>


  <link name="wheel_2">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="${math_pi_over_2} 0.0 0.0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="6"/>
  </link>


  <link name="wheel_3">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="${math_pi_over_2} 0.0 0.0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="6"/>
  </link>


  <link name="wheel_4">
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="${math_pi_over_2} 0.0 0.0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="6"/>
  </link>


  <joint name="base_to_wheel1" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_1"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="${((chassis_length/2)-wheel_radius)} ${((chassis_width/2)-(wheel_width/2))} -${chassis_to_ground-wheel_radius}"/>
  </joint>


  <joint name="base_to_wheel2" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_2"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="${chassis_length/2-wheel_radius} -${chassis_width/2-wheel_width/2} -${chassis_to_ground-wheel_radius}"/>
  </joint>


  <joint name="base_to_wheel3" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_3"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="-${chassis_length/2-wheel_radius} ${chassis_width/2-wheel_width/2} -${chassis_to_ground-wheel_radius}"/>
  </joint>


  <joint name="base_to_wheel4" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_4"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="-${chassis_length/2-wheel_radius} -${chassis_width/2-wheel_width/2} -${chassis_to_ground-wheel_radius}"/>
  </joint>



  <gazebo reference="wheel_1">
    <mu1 value="200"/>
    <mu2 value="200"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="wheel_2">
    <mu1 value="200"/>
    <mu2 value="200"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Black</material>
  </gazebo>


  <gazebo reference="wheel_3">
    <mu1 value="200"/>
    <mu2 value="200"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Black</material>
  </gazebo>


  <gazebo reference="wheel_4">
    <mu1 value="200"/>
    <mu2 value="200"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="chassis">
    <dampingFactor>0.00007</dampingFactor>
    <material>Gazebo/Red</material>
  </gazebo>







</robot>