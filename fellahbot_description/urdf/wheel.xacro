<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel">

    <xacro:include filename="$(find fellahbot_description)/urdf/constants.xacro"/>
    <xacro:include filename="$(find fellahbot_description)/urdf/inertials.xacro"/>
    <xacro:include filename="$(find fellahbot_description)/urdf/transmission.xacro"/>


    <xacro:macro name="front_steer_wheel" params="prefix parent reflect ">

        <link name="${prefix}_steer">
            <visual>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Caster_Part-Body.dae"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Caster_Part-Body.dae"/>
                </geometry>
            </collision>
            <xacro:solid_cylinder_inertial rpy="0 0 0" xyz="0.0 0.0 0.0" mass="6" radius="0.085" length="0.215" />
        </link>


        <joint name="${prefix}_steer_joint" type="revolute">
            <parent link="${parent}"/>
            <child link="${prefix}_steer"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-1.0 * math_pi_over_6}" upper="${math_pi_over_6}" velocity="5.0" effort="100"/>
            <origin xyz="0.319 ${(reflect * 0.175)} 0.0"/>
            <dynamics damping="0.7" friction="0.7"/>
        </joint>


        <xacro:transmission_steer prefix="${prefix}" />


        <link name="${prefix}_wheel">
            <visual>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Geared_Hub_Motor-Fusion001.dae"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Geared_Hub_Motor-Fusion001.dae"/>
                </geometry>
            </collision>
            <xacro:solid_cylinder_inertial rpy="${math_pi_over_2} 0 0" xyz="0.0 0.0 0.0" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_width}" />
        </link>


        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${prefix}_steer"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0 1 0"/>
            <origin xyz="0.0 0.0 -0.192" rpy="0 0 0"/>
            <limit effort="150" velocity="20"/>
            <dynamics damping="0.7" friction="0.7"/>
        </joint>


        <xacro:transmission_wheel prefix="${prefix}" />


        <gazebo reference="${prefix}_wheel">
            <mu1 value="1.6"/>
			<mu2 value="1.6"/>
        </gazebo>


    </xacro:macro>




    <xacro:macro name="rear_wheel" params="prefix parent reflect ">

        <link name="${prefix}_wheel">
            <visual>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Geared_Hub_Motor-Fusion001.dae"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://fellahbot_description/meshes/Fellahbot_DAE/Parts/Geared_Hub_Motor-Fusion001.dae"/>
                </geometry>
            </collision>
            <xacro:solid_cylinder_inertial rpy="${math_pi_over_2} 0 0" xyz="0.0 0.0 0.0" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_width}" />
        </link>


        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0 1 0"/>
            <origin xyz="-0.335 ${(reflect * 0.17523)} -0.192" rpy="0 0 0"/>
            <limit effort="150" velocity="20"/>
            <dynamics damping="0.7" friction="0.7"/>
        </joint>


        <xacro:transmission_wheel prefix="${prefix}" />

        <gazebo reference="${prefix}_wheel">
            <mu1 value="1.6"/>
			<mu2 value="1.6"/>
        </gazebo>


    </xacro:macro>


</robot>