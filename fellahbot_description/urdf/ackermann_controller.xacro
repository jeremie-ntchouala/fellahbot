<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ackermann_controller">

    <xacro:include filename="$(find fellahbot_description)/urdf/constants.xacro"/>
    <xacro:include filename="$(find fellahbot_description)/urdf/inertials.xacro"/>
    <xacro:include filename="$(find fellahbot_description)/urdf/transmission.xacro"/>


    <xacro:macro name="ackermann_steering_controller" params="prefix parent ">

        <!-- joints for ackermann_steer_controller -->
        <link name="${prefix}_steer_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.05" length="0.03"/>
                </geometry>
                <material name="yellow"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.05" length="0.03"/>
                </geometry>
                <material name="yellow"/>
            </collision>
            <xacro:solid_cylinder_inertial rpy="0 0 0" xyz="0.0 0.0 0.0" mass="6" radius="0.05" length="0.03" />
        </link>

        <joint name="${prefix}_steer_joint" type="revolute">
            <parent link="${parent}"/>
            <child link="${prefix}_steer_link"/>
            <axis xyz="0 0 1"/>
            <limit lower="${-1.0 * math_pi_over_6}" upper="${math_pi_over_6}" velocity="5.0" effort="100.0"/>
            <origin xyz="0.319 0.0 0.0"/>
            <dynamics damping="0.7" friction="0.7"/>
        </joint>

        <xacro:transmission_steer prefix="${prefix}" />


        <!-- joints for ackermann_speed_controller -->
        <link name="${prefix}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${math_pi_over_2} 0 0"/>
                <geometry>
                    <cylinder radius="0.03" length="0.05"/>
                </geometry>
                <material name="yellow"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${math_pi_over_2} 0 0"/>
                <geometry>
                    <cylinder radius="0.03" length="0.05"/>
                </geometry>
                <material name="yellow"/>
            </collision>
            <xacro:solid_cylinder_inertial rpy="0 0 0" xyz="0.0 0.0 0.0" mass="6" radius="0.03" length="0.05" />
        </link>

        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${parent}"/>
            <child link="${prefix}_wheel_link"/>
            <axis xyz="0 1 0"/>
            <origin xyz="-0.335 0.0 -0.192" rpy="0 0 0"/>
            <limit effort="150" velocity="20"/>
            <dynamics damping="0.7" friction="0.7"/>
        </joint>

        <xacro:transmission_wheel prefix="${prefix}" />

        <gazebo reference="${prefix}_wheel_link">
            <material>Gazebo/Yellow</material>
            <mu1 value="1.6"/>
            <mu2 value="1.6"/>
        </gazebo>


    </xacro:macro>




</robot>